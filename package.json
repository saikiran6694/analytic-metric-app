{
  "name": "alter_office_assessment",
  "version": "1.0.0",
  "description": "Analytics management",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --watch",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest src/tests/unit --coverage",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest src/tests/integration --coverage",
    "test:performance": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest src/tests/performance"
  },
  "author": "Saikiran",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {},
    "testMatch": [
      "**/src/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!jest.config.js",
      "!server.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.js"
    ],
    "testTimeout": 10000,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
